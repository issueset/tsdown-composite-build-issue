{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "composite": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [],
    "module": "preserve",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "outDir": "${configDir}/dist/dist_tsc/dom"
  },
  "include": [
    "${configDir}/src/dom/*"
  ]
}
