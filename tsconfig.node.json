{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "composite": true,
    "lib": [
      "ESNext",
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "outDir": "${configDir}/dist/dist_tsc/node"
  },
  "include": [
    "${configDir}/src/node/"
  ]
}
